{
  "name": "web-mini-game-platform",
  "private": true,
  "version": "0.1.0",
  "description": "一个现代化的网页小游戏平台，支持游戏浏览、上传和在线游玩",
  "author": "Game Developer",
  "type": "module",
  "main": "electron.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dexie": "^3.2.4",
    "pinia": "^2.1.7",
    "vue": "^3.4.38",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.3",
    "concurrently": "^8.2.2",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-prebuilt": "^1.4.13",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vue-tsc": "^2.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.webgames.platform",
    "productName": "Web Mini-Game Platform",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
